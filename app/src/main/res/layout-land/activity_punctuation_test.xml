<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.fredroid.symbolling.PunctuationTestActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView_question"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:autoText="false"
        android:background="@drawable/symbol_bk"
        android:fadingEdge="none"
        android:fontFeatureSettings="@string/allsymbol"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black_overlay"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:fadingEdge="none"
        tools:fontFamily="sans-serif" />

    <Button
        android:id="@+id/button_answer_a"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/myAnswer"
        android:gravity="center_vertical"
        android:onClick="onClickA"
        android:paddingLeft="30dp"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/textView_question"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/button_answer_b"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/button_answer_b"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:background="@color/myAnswer"
        android:gravity="center_vertical"
        android:onClick="onClickB"
        android:paddingLeft="30dp"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/button_answer_a"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button_answer_a"
        android:layout_marginTop="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="4dp" />

    <Button
        android:id="@+id/button_answer_c"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/myAnswer"
        android:gravity="center_vertical"
        android:onClick="onClickC"
        android:paddingLeft="30dp"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/button_answer_a"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/button_answer_a"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="@+id/button_answer_a" />

    <Button
        android:id="@+id/button_answer_d"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="71dp"
        android:background="@color/myAnswer"
        android:gravity="center_vertical"
        android:onClick="onClickD"
        android:paddingLeft="30dp"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/button_answer_b"
        app:layout_constraintLeft_toLeftOf="@+id/button_answer_b"
        app:layout_constraintTop_toTopOf="@+id/button_answer_c"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/textView_Count"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@android:color/background_light"
        android:gravity="center"
        android:text="#99/99"
        tools:textSize="10sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_question"
        android:layout_marginEnd="16dp" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="145dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="145dp"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
